{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "adminPublicKey": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Specifies the SSH rsa public key file as a string. Use \"ssh-keygen -t rsa -b 2048\" to generate your SSH key pairs."
            }
        },
        "adminUsername": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Specifies a username for the Virtual Machine."
            }
        },
        "vms": {
            "type": "array",
            "defaultValue": [
                {
                    "name": "wazuh-dashboard",
                    "enabled": true,
                    "vmSize": "Standard_B4als_v2",
                    "privateIpAddress": "10.10.10.10",
                    "subnetId": "",
                    "asgId": "",
                    "cloudInit": ""
                },
                {
                    "name": "wazuh-server",
                    "enabled": true,
                    "vmSize": "Standard_B1s",
                    "privateIpAddress": "10.10.20.10",
                    "subnetId": "",
                    "asgId": "",
                    "cloudInit": ""
                },
                {
                    "name": "wazuh-indexer",
                    "enabled": true,
                    "vmSize": "Standard_B1s",
                    "privateIpAddress": "10.10.30.10",
                    "subnetId": "",
                    "asgId": "",
                    "cloudInit": ""
                }
            ]
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "condition": "[parameters('vms')[copyIndex('NIC')].enabled]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2024-05-01",
            "name": "[concat(parameters('vms')[copyIndex('NIC')].name, '-NIC')]",
            "location": "[parameters('location')]",
            "copy": {
                "name": "NIC",
                "count": "[length(parameters('vms'))]",
                "mode": "serial",
                "batchSize": 1
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "privateIPAddress": "[parameters('vms')[copyIndex('NIC')].privateIpAddress]",
                            "subnet": {
                                "id": "[parameters('vms')[copyIndex('NIC')].subnetId]"
                            },
                            "applicationSecurityGroups": [
                                {
                                    "id": "[parameters('vms')[copyIndex('NIC')].asgId]"
                                }
                            ]
                        }
                    }
                ]
            }
        },
        {
            "condition": "[parameters('vms')[copyIndex('VM')].enabled]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2024-07-01",
            "name": "[parameters('vms')[copyIndex('VM')].name]",
            "location": "[parameters('location')]",
            "copy": {
                "name": "VM",
                "count": "[length(parameters('vms'))]",
                "mode": "serial",
                "batchSize": 1
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('vms')[copyIndex('VM')].vmSize]"
                },
                "additionalCapabilities": {
                    "hibernationEnabled": false
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "canonical",
                        "offer": "ubuntu-24_04-lts",
                        "sku": "server",
                        "version": "latest"
                    },
                    "osDisk": {
                        "osType": "Linux",
                        "name": "[concat(parameters('vms')[copyIndex('VM')].name, '_OsDisk_01')]",
                        "createOption": "FromImage",
                        "caching": "ReadWrite",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        },
                        "deleteOption": "Delete",
                        "diskSizeGB": 64
                    },
                    "diskControllerType": "SCSI"
                },
                "osProfile": {
                    "computerName": "[parameters('vms')[copyIndex('VM')].name]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": true,
                        "ssh": {
                            "publicKeys": [
                                {
                                    "path": "[concat('/home/', parameters('adminUsername'), '/.ssh/authorized_keys')]",
                                    "keyData": "[parameters('adminPublicKey')]"
                                }
                            ]
                        }
                    },
                    "customData":  "[if(empty(parameters('vms')[copyIndex('VM')].cloudInit), json('null'), base64(parameters('vms')[copyIndex('VM')].cloudInit))]"
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('vms')[copyIndex('VM')].name, '-NIC'))]",
                            "properties": {
                                "deleteOption": "Delete"
                            }
                        }
                    ]
                }
            },
            "dependsOn": [ "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('vms')[copyIndex('VM')].name, '-NIC'))]" ]
        }
    ],
    "outputs": {}
}